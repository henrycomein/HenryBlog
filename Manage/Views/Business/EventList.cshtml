@{
    ViewBag.Title = "EventList";
}
@section scripts{
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/jquery.pagination.js"></script>
    <script src="~/Scripts/lhgdialog/lhgdialog.min.js?skin=jtop"></script>
    <script src="~/Scripts/lhgdialog/lhgdialogPlus.js"></script>
    <script type="text/javascript">
        $(function () {
            var condition = { content: '', category: 0, pageindex: 1, pagesize: 10 };
            var opt = tools.pagedefaultops;
            var firstRequest = true;
            opt.callback = function (pageindex) {
                condition.pageindex = pageindex + 1;
                search();
            }

            function search() {
                var callback = function (data) {
                    $("#event-table tbody").empty();
                    var htmlArray = [];
                    if (data.total > 0) {
                        $.each(data.items, function (i, item) {
                            if (i % 2 == 0)
                                htmlArray.push('<tr class="odd">');
                            else
                                htmlArray.push('<tr class="even">');
                            htmlArray.push('<td class="center">' + item.date + '</td>');
                            htmlArray.push('<td><a href="javascript:;" >' + item.title + '</a></td>');
                            htmlArray.push('<td class="center">' + (item.status ? ' <i class="green fa fa-check-circle bigger-130" title="有效"></i>' : '<i class="red fa fa-minus-circle bigger-130" title="无效"></i>') + '</td>');
                            htmlArray.push('<td class="center"><div class=" action-buttons">');
                            htmlArray.push('<a class="green" data-title="编辑" data-rel="popup" data-width="650px" data-height="570px" data-content="url:{dns}business/event/' + item.id + '" href="javascript:;" title="编辑"  ><i class="ace-icon fa fa-pencil bigger-130"></i></a>');
                            htmlArray.push('&nbsp;<a class="red" data-rel="delete" href="javascript:;" title="删除" data-category="event" data-id="' + item.id + '"  data-content="确定删除吗？"><i class="ace-icon fa fa-trash-o bigger-130"></i></a>');
                            htmlArray.push('</div></td></tr>');

                        });
                    }
                    else {
                        htmlArray.push('<tr><td colspan="4" class="center">No Data Found!</td></tr>');
                    }
                    $("#event-table tbody").append(htmlArray.join(''));
                    $("#event-table-info").html('总共 ' + data.total + ' ');
                    if (firstRequest) {
                        firstRequest = false;
                        $("#pagination").pagination(data.total, opt);
                    }
                };
                tools.postData('{dns}api/event/list', condition, callback, '#event-table');

            }

            $("#btn-search").click(function () {
                condition.content = '';
                condition.category = 0;
                condition.pageindex = 1;
                firstRequest = true;
                search();
            });
            search();
        });
    </script>
}
<div class="page-header">
    <h1>生活事件列表
		<small>
            <i class="ace-icon fa fa-angle-double-right"></i>
        </small>
        <button class="btn btn-info" type="button" title="新增" data-rel="popup" data-content="url:{dns}business/event" data-width="650px" data-height="570px" data-title="新增">
            <i class="ace-icon fa fa-plus bigger150"></i>新增
        </button>
    </h1>
</div>
<div class="col-xs-12">
    <div>
        <div class="dataTables_wrapper form-inline no-footer">
            <table id="event-table" class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable" role="grid" aria-describedby="dynamic-table_info">
                <thead>
                    <tr>
                        <th class="center col-xs-2">日期</th>
                        <th class="center col-xs-6">标题</th>
                        <th class="center col-xs-2">状态</th>
                        <th class="center col-xs-2">操作</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <div class="row">
                <div class="col-xs-6">
                    <div class="dataTables_info" id="article-table-info"></div>
                </div>
                <div class="col-xs-6">
                    <div class="dataTables_paginate paging_simple_numbers">
                        <ul class="pagination" id="pagination"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
